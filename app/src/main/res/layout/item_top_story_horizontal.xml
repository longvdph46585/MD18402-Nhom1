<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="129dp"
    android:id="@+id/wrapItemStoryTop_el"
    android:layout_height="280dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"

    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    >
<!--    f2f3f4-->
    <ImageView

        android:background="@drawable/wrap_border_radius_image_story"
        android:id="@+id/imageStory"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_alignParentTop="true"
        ></ImageView>

    <TextView
        android:id="@+id/nameStory_el"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/imageStory"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        android:ellipsize="end"
        android:maxLines="2"

        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_below="@+id/nameStory_el"
        android:id="@+id/genre_el"
        android:textColor="#c0c0c0"
        android:height="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"

        />
</RelativeLayout>
